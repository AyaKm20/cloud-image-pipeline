        "accelerator": "kvm",
        "net_device": "virtio-net",
        "use_default_display": true,
        "qemuargs": [
            [
                "-fda",
                "cloud-init-{{user `environment`}}.yml"
            ],
            [
                "-display",
                "gtk"
            ],
            [
                "-machine",
                "accel=kvm"
            ],
            [
                "-cpu",
                "host"
            ],
            [
                "-m",
                "2048M"
            ],
            [
                "-smp",
                "2"
            ]
        ]
    }
]
,
  "provisioners": [
    {
        "type": "shell",
        "inline": [
            "sudo systemctl enable ssh",
            "sudo systemctl start ssh",
            "sudo apt update",

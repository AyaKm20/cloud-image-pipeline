{
  "builders": [
    {
      "type": "qemu",
      "iso_url": "https://releases.ubuntu.com/20.04/ubuntu-20.04.6-live-server-amd64.iso",
      "iso_checksum": "sha256:b8f31413336b9393ad5d8ef0282717b2ab19f007df2e9ed5196c13d8f9153c8b",
      "output_directory": "output-ubuntu2",
      "vm_name": "ubuntu2024",
      "disk_size": 5000,
      "format": "qcow2",
      "communicator": "ssh",
      "ssh_username": "ubuntu",
      "ssh_password": "packer",
      "ssh_timeout": "30m",
      "ssh_port": 2622,
      "qemuargs": [
        ["-m", "1024M"],
        ["-cpu", "qemu64"],
        ["-smp", "2"],
        ["-netdev", "user,id=net0,hostfwd=tcp::2622-:22"],
        ["-device", "virtio-net,netdev=net0"]
      ],
      "headless": true,
      "boot_command": [
        "<esc><wait>",
        "auto console=ttyS0 ",
        "priority=critical ",
        "locale=en_US ",
        "keyboard-configuration/layoutcode=us ",
        "<enter><wait>"
      ],
      "boot_wait": "5s"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get update",
        "sudo apt-get install -y openssh-server",
        "sudo sed -i 's/#Port 22/Port 22/' /etc/ssh/sshd_config",
        "sudo systemctl enable ssh",
        "sudo systemctl start ssh",
        "sudo apt-get upgrade -y"
      ]
    }
  ]
}
